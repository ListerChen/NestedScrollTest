<?xml version="1.0" encoding="utf-8"?>
<com.lister.nestedscrolltest.mounting.NestedLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mounting_nested_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mounting.MountingActivity">

    <com.youth.banner.Banner
        android:id="@+id/mounting_banner"
        android:layout_width="match_parent"
        android:layout_height="240dp">
    </com.youth.banner.Banner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_header_text_height"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="评论列表"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mounting_rv_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</com.lister.nestedscrolltest.mounting.NestedLinearLayout>